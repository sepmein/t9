doctype 5
html
	head
		title 开始使用Vec
		meta(charset='utf-8')
		link(rel='stylesheet',href='../css/bootstrap.min.css')
		link(rel='stylesheet',href='../css/vec/style.css')
		script(src="../js/libs/modernizr-2.5.3.min.js")
	body
		.container
			header.row
				div.span12
					h2 开始使用Vec
					h3 Vec的使用方法非常简单，只需要在下列表单中填写所需要的数据即可
			section#main.row
				div.span8
					form#in.well.form-horizontal
						fieldset
							legend 原药
							div.controlgroup
								label.control-label.focused(for='consistencyRaw') 原药浓度
								div.controls
									div.input-append
										input.span2#consistencyRaw(type='number')
										span.add-on %
									p.help-block some help text for test
						fieldset
							legend 终浓度
							div.controlgroup
								label.control-label(for='consistencyHigh') 最高浓度
								div.controls
									input.span2#consistencyHigh(type='number')
									select#consistencyHighUnit
										option mg/mL
										option mg/L
										option ppm
										option %
									p.help-block some help text for test
							//div.controlgroup
								label.control-label(for='consistencyLow') 最低浓度
								div.controls
									input.span2#consistencyLow(type='number')
									p.help-block some help text for test
							div.controlgroup
								label.control-label(for='dose') 剂量
								div.controls
									input.span2#dose(type='number')
									select#doseUnit
										option mL
										option L
										option uL
									p.help-block some help text for test
							div.controlgroup
								label.control-label(for='groupNumber') 组数
								div.controls
									input.span2#groupNumber(type='number')
									p.help-block some help text for test
							div.controlgroup
								label.control-label(for='propotionRate') 组间比
								div.controls
									input.span2#propotionRate(type='number')
									p.help-block some help text for test
							div.form-actions
								button.btn.btn-large.btn-primary#sub(type='submit') 计算

				div.span4
					h4 Example 
			footer.row
		script(src='../js/vec/scripts.js')